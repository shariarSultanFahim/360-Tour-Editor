generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String
  floorId  Int
  floor    Floor     @relation(fields: [floorId], references: [id])
  imageUrl String
  notes    String?
  hotspots Hotspot[]
  fromRoom Hotspot[] @relation(name: "movable_room_ids")
}

model Hotspot {
  id       Int    @id @default(autoincrement())
  pitch    Float
  yaw      Float
  type     String
  sceneId  String
  text     String
  toRoomId Int?
  roomId   Int
  room     Room   @relation(fields: [roomId], references: [id])
  toRoom   Room?  @relation(name: "movable_room_ids", fields: [toRoomId], references: [id])
}

model Floor {
  id    Int    @id @default(autoincrement())
  name  String
  rooms Room[]
}
